@model IEnumerable<LearnITStore.Domain.Entities.Product>
@{
    ViewBag.Title = "Administración:Todos los Productos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Administración</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ProductID</td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit",
                            new {productID = item.ProductID})
                    </td>
                    <td class="text-right">@item.Price.ToString("C")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductID", item.ProductID)
                            <input type="submit"
                                   class="btn btn-danger btn-xs"
                                   value="Eliminar"/>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Agregar nuevo producto",
       "Create",null,new{@class="btn btn-default"})
    </div>
</div>


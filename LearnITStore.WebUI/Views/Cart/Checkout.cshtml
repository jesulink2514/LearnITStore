@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<h2>Check out ahora!</h2>
<p>
    Por favor ingrese los detalles y 
    le enviaremos sus productos de inmediato!
</p>
@using(Html.BeginForm())
{
    <h3>Enviar a</h3>
    <div class="form-group">
        <label>Nombre:</label>
        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    </div>

    <h3>Dirección</h3>
    <div class="form-group">
        <label>Linea 1:</label>
        @Html.TextBoxFor(x => x.Line1,new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Linea 2:</label>
        @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Linea 3:</label>
        @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ciudad:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Estado/Departamento:</label>
        @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Código ZIP:</label>
        @Html.TextBoxFor(x => x.ZIP,new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>País:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>

    <h3>Opciones</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x=>x.GiftWrap)
            Envolver como regalo
        </label>
    </div>

    <div class="text-center">
        <input type="submit"
               class="btn btn-primary"
               value="Completar el pedido"/>
    </div>
}


@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<h2>Check out ahora!</h2>
<p>
    Por favor ingrese los detalles y 
    le enviaremos sus productos de inmediato!
</p>
@using(Html.BeginForm())
{
    <h3>Enviar a</h3>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x=>x.Name)        
        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    </div>

    <h3>Dirección</h3>
    foreach(var p in ViewData.ModelMetadata.Properties)
    {
        if(p.PropertyName!="Name" &&
            p.PropertyName!= "GiftWrap")
        {
            <div class="form-group">                
                <label>@(p.DisplayName??p.PropertyName)</label>
                @Html.TextBox(p.PropertyName,null,
               new {@class="form-control"})
            </div>
        }
    }
    <h3>Opciones</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x=>x.GiftWrap)
            Envolver como regalo
        </label>
    </div>

    <div class="text-center">
        <input type="submit"
               class="btn btn-primary"
               value="Completar el pedido"/>
    </div>
}

